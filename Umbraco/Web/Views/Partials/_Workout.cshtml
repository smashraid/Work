                        <div class="control-group">
                            <label class="control-label">
                                State</label>
                            <div class="controls">
                                <select data-bind='options: $root.states, optionsText: "Value", optionsValue: "Id", optionsCaption: "Select...", value: StateId'>
                                </select>
                            </div>
