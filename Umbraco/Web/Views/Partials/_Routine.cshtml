                                    <i class="icon-pencil"></i>
                                </button>
                                <button class="btn bootstraptooltip" data-toggle="tooltip" data-placement="top" title="Delete" data-bind="click: $root.deleteRoutine">
                                    <i class="icon-trash"></i>
                                </button>
